html
    head
        title Vehical Information
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
    body
        div(class="container h-100")
            div(class="row justify-content-center align-items-center h-100 ")
                div(class="col")
                    form(class="row justify-content-center align-items-center" action="data" method="POST")
                        div(class="col-auto")
                            input(class="col form-control" type="text" name="vin" placeholder="VIN" value=`${vin}`) 
                        div(class="col-auto")
                            input(class="col btn btn-primary" type="submit", value="submit")
                    div(class="row justify-content-center align-items-center")
                        div(class="col-auto")
                            span More: 
                            a(class="btn btn-info m-3" href="all_manufacturers") All Manufacturers
                            a(class="btn btn-info" href="all_makes") Find Makes
                    div(class="row")
                        if success == true
                            div(class="alert alert-success" role="alert") Successfully fetched VIN data
                            table(class="table table-striped")
                                tr
                                    th VIN
                                    th Year
                                    th Make
                                    th Model
                                tr
                                    td #{vin}
                                    td #{year}
                                    td #{make}
                                    td #{model}
                        else if success == false
                            div(class="alert alert-danger" role="alert") Invaild VIN Number
html
    head
        title Vehical Information
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
    body
        div(class="container h-100")
            div(class="row justify-content-center align-items-center h-100 ")
                div(class="col")
                    form(class="row justify-content-center align-items-center" action="" method="POST")
                        div(class="col-auto")
                            input(class="col form-control" type="text" name="manufacturer" placeholder="Manufacturer: toyota" value=`${manufacturer}`) 
                        div(class="col-auto")
                            input(class="col btn btn-primary" type="submit", value="submit")
                    div(class="row")
                        if success == true
                            table(class="table table-striped")
                                tr
                                    th Make ID
                                    th Make Name
                                    th Model ID
                                    th Model Name
                                each make in makes
                                    tr
                                        td #{make.Make_ID}
                                        td #{make.Make_Name}
                                        td #{make.Model_ID}
                                        td #{make.Model_Name}
                        else if success == false
                            div(class="alert alert-danger" role="alert") No results Found for this Manufacturer
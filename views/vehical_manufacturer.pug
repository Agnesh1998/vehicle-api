html
    head
        title Vehical Information
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
    body
        div(class="container h-100")
            div(class="row justify-content-center align-items-center h-100 ")
                div(class="col")
                    div(class="row")
                        if success == true
                            table(class="table table-striped")
                                tr
                                    th Country
                                    th Manufacturer Common Name
                                    th Manufacturer Registered Name
                                each manufacturer in manufacturers
                                    tr
                                        td #{manufacturer.Country}
                                        td #{manufacturer.Mfr_CommonName}
                                        td #{manufacturer.Mfr_Name}
                        else if success == false
                            div(class="alert alert-danger" role="alert") No results Found, Go to previous page
                    div(class="row")
                        div(class="col d-flex justify-content-start")
                            a(class="btn btn-primary" href=`all_manufacturers?page=${prev_page}`) Back
                        div(class="col d-flex justify-content-end")
                            a(class="btn btn-primary" href=`all_manufacturers?page=${next_page}`) Next